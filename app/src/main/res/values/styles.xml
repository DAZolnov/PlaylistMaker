<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="main">
        <item name="android:background">@color/main_background</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/_4dp</item>
    </style>

    <style name="settings">
        <item name="android:background">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="settings_arrow_back">
        <item name="android:layout_width">@dimen/_48dp</item>
        <item name="android:layout_height">@dimen/_48dp</item>
        <item name="android:layout_marginLeft">@dimen/_4dp</item>
        <item name="android:padding">@dimen/_12dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="iconTint">@color/black</item>
        <item name="cornerRadius">@dimen/zero</item>
    </style>

    <style name="settings_header">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/_48dp</item>
        <item name="android:layout_marginLeft">@dimen/_52dp</item>
        <item name="android:textAppearance">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">@dimen/_12dp</item>
    </style>

    <style name="main_button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/zero</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="iconTint">@color/black</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/_8dp</item>
        <item name="cornerRadius">@dimen/_16dp</item>
        <item name="android:textAppearance">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="settings_button">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/settings_button_height</item>
        <item name="android:textAppearance">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:paddingStart">@dimen/_16dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/settings_text_size</item>
        <item name="android:textStyle">normal</item>
        <item name="iconGravity">end</item>
        <item name="iconTint">@color/settings_icon</item>
    </style>

    <style name="settings_switch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/settings_button_height</item>
        <item name="android:textAppearance">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:paddingStart">@dimen/_16dp</item>
        <item name="android:textSize">@dimen/settings_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:trackTint">@color/track_color_light</item>
        <item name="android:thumbTint">@color/settings_icon</item>
        <item name="android:checked">false</item>
    </style>

    <style name="search_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_36dp</item>
        <item name="android:layout_marginTop">@dimen/_64dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginHorizontal">@dimen/_16dp</item>
        <item name="android:background">@drawable/search_line_background</item>
        <item name="android:backgroundTint">@color/track_color_light</item>
    </style>

    <style name="text_in_search_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_36dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:drawableStart">@drawable/search_icon_line</item>
        <item name="android:drawablePadding">@dimen/_8dp</item>
        <item name="android:drawableTint">@color/settings_icon</item>
        <item name="android:hint">@string/search</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingStart">@dimen/_12dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/settings_icon</item>
        <item name="android:textSize">@dimen/settings_text_size</item>
        <item name="android:textAppearance">@font/ys_display_regular</item>
    </style>

    <style name="clear_icon">
        <item name="android:layout_width">@dimen/_40dp</item>
        <item name="android:layout_height">@dimen/_36dp</item>
        <item name="android:paddingHorizontal">@dimen/_14dp</item>
        <item name="android:paddingVertical">@dimen/_12dp</item>
        <item name="android:layout_gravity">end</item>
        <item name="iconTint">@color/settings_icon</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:visibility">gone</item>
    </style>
</resources>